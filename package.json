{
  "name": "buzztech",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "description": "Site vitrine professionnel BuzzTech - Services informatiques à Saint-Étienne : dépannage, configuration PC, création web",
  "author": "BuzzTech",
  "license": "UNLICENSED",
  "repository": {
    "type": "git",
    "url": "https://github.com/estebane-blancquart/buzztech"
  },
  "keywords": [
    "react",
    "typescript",
    "vite",
    "buzztech",
    "informatique",
    "saint-etienne"
  ],
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "preview": "vite preview",
    "lint:js": "eslint src/ --config tools/eslint.config.js",
    "lint:css": "stylelint \"src/**/*.scss\" --config tools/stylelint.config.js",
    "lint:fix": "npm run lint:css -- --fix",
    "lint": "npm run lint:js && npm run lint:css",
    "format": "prettier --write src/ --config tools/prettier.config.js",
    "format:check": "prettier --check src/ --config tools/prettier.config.js",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "type-check": "tsc --noEmit",
    "validate": "npm run type-check && npm run lint && npm run test:run"
  },
  "dependencies": {
    "@sentry/react": "^10.21.0",
    "classnames": "^2.5.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-icons": "^5.5.0",
    "react-router-dom": "^7.1.3"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^22.14.1",
    "@types/react": "^18.3.23",
    "@types/react-dom": "^18.3.5",
    "@typescript-eslint/eslint-plugin": "^8.35.0",
    "@typescript-eslint/parser": "^8.35.0",
    "@vitejs/plugin-react": "^4.3.4",
    "eslint": "^9.29.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "jsdom": "^26.1.0",
    "prettier": "^3.6.0",
    "sass": "^1.83.4",
    "stylelint": "^16.21.0",
    "stylelint-config-standard-scss": "^15.0.1",
    "stylelint-order": "^7.0.0",
    "typescript": "~5.6.2",
    "vite": "^6.0.5",
    "vitest": "^3.2.4"
  }
}